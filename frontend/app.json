{
  "expo": {
    "name": "Interview Prep",
    "slug": "interview-prep",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "interview-prep",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos of job postings to extract text",
        "NSPhotoLibraryUsageDescription": "Select job posting images from gallery"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f0f1a"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f0f1a"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Select job posting images to extract text",
          "cameraPermission": "Take photos of job postings to extract text"
        }
      ],
      "expo-document-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
